<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCalenderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD CALENDER"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crop Name"
                    android:textColor="@color/green"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:ems="10"
                    android:foregroundTint="@color/green"
                    android:hint="tap to write"
                    android:inputType="text"
                    android:textColor="@color/green"
                    android:textColorLink="@color/green"
                    android:textCursorDrawable="@color/green" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/green"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="tap to write"
                    android:inputType="text"
                    android:textColorLink="@color/green"
                    android:textCursorDrawable="@color/green" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Completion date"
                    android:textColor="@color/green"
                    android:textSize="16sp" />

                <DatePicker
                    android:id="@+id/Calendar_datepicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/green"
                    android:calendarTextColor="@color/green"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:dayOfWeekBackground="@color/green"
                    android:dayOfWeekTextAppearance="@color/green"
                    android:foregroundTint="@color/green"
                    android:headerBackground="@color/green"

                    android:scrollbarTrackHorizontal="@color/green"
                    android:yearListSelectorColor="@color/green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textColor="@color/green"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/radioPlanting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/green"
                            android:text="Planting"
                            android:textColor="@color/green" />

                        <RadioButton
                            android:id="@+id/radioHarvesting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/green"
                            android:text="Harvesting"
                            android:textColor="@color/green" />
                    </RadioGroup>
                </LinearLayout>

                <Button
                    android:id="@+id/set_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Calendar"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>